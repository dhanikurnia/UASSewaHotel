<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyBookingsFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview1"
            android:layout_marginTop="30dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorblue">

                <ImageView
                    android:id="@+id/images1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/malang"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorblue">

                    <ImageView
                        android:id="@+id/images2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/bali" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorblue">

                        <ImageView
                            android:id="@+id/images3"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/jakarta" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/colorblue">

                            <ImageView
                                android:id="@+id/images4"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/batu" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@color/colorblue">

                                <ImageView
                                    android:id="@+id/images5"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:scaleType="fitXY"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/semarang" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@color/colorblue">

                                    <ImageView
                                        android:id="@+id/images6"
                                        android:layout_width="200dp"
                                        android:layout_height="200dp"
                                        android:scaleType="fitXY"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:src="@drawable/jogja" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="712dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="250dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cardview1"
                android:layout_marginTop="300dp"
                android:padding="10dp">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/cardview1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/discon1"
                    android:orientation="horizontal">

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/cardview1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/discon2"
                    android:orientation="horizontal">

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/cardview1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/discon3"
                    android:orientation="horizontal">

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/cardview1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/discon4"
                    android:orientation="horizontal">

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/cardview1"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/discon6"
                    android:orientation="horizontal">

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/discon5"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
